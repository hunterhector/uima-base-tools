<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>TaskMCTestTypeSystem</name>
    <description>A extended type system for the development of MC (Machine Comprehension) task, extending the core
        TypeSystem
    </description>
    <version>1.0</version>
    <vendor/>
    <imports>
        <import name="TypeSystem"/>
    </imports>
    <types>
        <typeDescription>
            <name>edu.cmu.cs.lti.script.type.MCStory</name>
            <description/>
            <supertypeName>edu.cmu.cs.lti.script.type.ComponentAnnotation</supertypeName>
            <features>
                <featureDescription>
                    <name>mcQuestions</name>
                    <description/>
                    <rangeTypeName>uima.cas.FSArray</rangeTypeName>
                    <elementType>edu.cmu.cs.lti.script.type.MCQuestion</elementType>
                </featureDescription>
            </features>
        </typeDescription>
        <typeDescription>
            <name>edu.cmu.cs.lti.script.type.MCQuestion</name>
            <description/>
            <supertypeName>edu.cmu.cs.lti.script.type.ComponentAnnotation</supertypeName>
            <features>
                <featureDescription>
                    <name>mcAnswerChoices</name>
                    <description/>
                    <rangeTypeName>uima.cas.FSArray</rangeTypeName>
                    <elementType>edu.cmu.cs.lti.script.type.MCAnswerChoice</elementType>
                </featureDescription>
                <featureDescription>
                    <name>isMultipleChoice</name>
                    <description/>
                    <rangeTypeName>uima.cas.Boolean</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>trueCandidateQuestions</name>
                    <description>The true ranked candidate questions</description>
                    <rangeTypeName>uima.cas.IntegerArray</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>predictedCandidateQuestions</name>
                    <description>The predicted ranked candidate questions</description>
                    <rangeTypeName>uima.cas.IntegerArray</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>
        <typeDescription>
            <name>edu.cmu.cs.lti.script.type.MCAnswerChoice</name>
            <description/>
            <supertypeName>edu.cmu.cs.lti.script.type.ComponentAnnotation</supertypeName>
            <features>
                <featureDescription>
                    <name>isCorrect</name>
                    <description/>
                    <rangeTypeName>uima.cas.Boolean</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>guesses</name>
                    <rangeTypeName>uima.cas.FSArray</rangeTypeName>
                    <elementType>edu.cmu.cs.lti.script.type.MCAnswerGuess</elementType>
                </featureDescription>
                <featureDescription>
                    <name>statementForm</name>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>sentenceEntailmentScores</name>
                    <description>Entailment Scores from each sentence</description>
                    <rangeTypeName>uima.cas.DoubleArray</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>
        <typeDescription>
            <name>edu.cmu.cs.lti.script.type.MCAnswerGuess</name>
            <description/>
            <supertypeName>edu.cmu.cs.lti.script.type.ComponentAnnotation</supertypeName>
            <features>
                <featureDescription>
                    <name>isCorrect</name>
                    <description/>
                    <rangeTypeName>uima.cas.Boolean</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>
    </types>
</typeSystemDescription>
